<% if @products.count == 0 %>
    <div>Do not have product in database</div>
    <% else %>
   <div style="display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;">
    <% @products.each do |product| %> 
    <div style="width:200px; margin: 0 2rem; min-height: 400px">
        <div style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
   text-align: center; 
    font-family: arial;">
      <img src="<%= product.img%>" alt="Denim Jeans" style="width:100%">
      <h4><%= product.product_name %></h1>
      <p> <%= product.price %></p>
        <p> <%= product.category %></p>
      <p>
           <%= product.description %>
      </p>
      
    <%= form_with url: "/product", method: :post do |form| %>
      <%= form.hidden_field :product_id , value: product.id%>
      <%= form.submit "Add to cart" %>
    <% end %>
    </div>
    </div>
    <%end%>
   </div>
    <%end%>
